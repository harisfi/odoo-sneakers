<?xml version="1.0" encoding="utf-8"?>
    <odoo>

        <record id="view_form_order" model="ir.ui.view">
            <field name="name">Order</field>
                <field name="model">os_purchase.order</field>
                <field name="type">form</field>
                <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>    
                            <group>
                            </group>    
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="tree_view_order" model="ir.ui.view">
            <field name="name">Order</field>
            <field name="model">os_purchase.order</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="order_action" model="ir.actions.act_window">
            <field name="name">Order</field>
            <field name="res_model">os_purchase.order</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_form_order"/>
        </record>

        <menuitem name="Order"
            id="order_menu_root"/>

        <menuitem name="Order"
            id="order_menu_action"
            action="order_action"
            parent="order_menu_root"/>
    </odoo>